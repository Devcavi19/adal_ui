# ============================================
# Adal UI Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# Required: Google Gemini API
# ============================================
GOOGLE_API_KEY=your_google_api_key_here

# ============================================
# Required: Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# ============================================
# Required: Security
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# ============================================
# Application Settings
# ============================================
# Set to your production URL (required for OAuth callbacks)
APP_URL=https://your-domain.com

# Debug mode (set to False in production)
DEBUG=False

# Server configuration
PORT=5000
HOST=0.0.0.0

# Flask environment (production or development)
FLASK_ENV=production

# ============================================
# Optional: Advanced Configuration
# ============================================
# Custom index path (defaults to ./index)
# INDEX_PATH=/path/to/your/index

# Allowed email domains (comma-separated)
# ALLOWED_EMAIL_DOMAINS=@cspc.edu.ph,@my.cspc.edu.ph

# Session cookie security (set to True when using HTTPS)
SESSION_COOKIE_SECURE=True

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
